plane = UsdGeometry("/plane") {
    ["stage"] = rats_assets_dir .. "/models/plane.usdc",
    ["prim_path"] = "/plane",
    ["node_xform"] = rotate(90, 1, 0, 0) * 
                     scale(5.5, 1.5, 1) * 
                     translate(.7, 0.7, 2) * 
                     rotate(-30, 1, 0, 0)
}

planeMtl = DwaBaseMaterial("/planeMtl") {
    ["presence"] = 0.1,
    ["specular_model"] = 0,
}

GeometrySet("/geometrySet") {
    plane,
}

Layer("/layer") {
    { plane, "", planeMtl, LightSet("/lightset")},
}

RenderOutput("/transparent_all") {
    ["file_name"] = "result0.exr",
    ["result"] = 8, -- light aov
    ["light_aov"] = "Cs[DSG]*[LO]"
}
