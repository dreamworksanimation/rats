rats_assets_dir = os.getenv("RATS_ASSETS_DIR")

SceneVariables {
    ["image_width"] = 256,
    ["image_height"] = 256,
    ["pixel_samples"] = 1,
}

Camera("/Scene/rendering/camera") {
    ["node_xform"] = translate(0, 20, 80),
    ["mb_shutter_open"] = -0.5,
    ["mb_shutter_close"] = 0.5,
}

env = EnvLight("/Scene/lighting/env") {
}

lightSet = LightSet("/Scene/lighting/lightSet") {
    env,
}

vdb = VdbGeometry("/Scene/geometry/vdb") {
    ["model"] = rats_assets_dir.."/models/bunny_mblur.vdb",
    ["velocity_grid"] = "v",
    ["velocity_scale"] = 10,
}

volumeMtl = VdbVolume("volumeMtl") {
}

GeometrySet("Scene/geometrySet") {
    vdb,
}

Layer("/Scene/layer") {
    {vdb, "", lightSet, volumeMtl}
}
