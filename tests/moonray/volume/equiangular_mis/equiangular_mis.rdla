SceneVariables {
    ["image_width"] = 512,
    ["image_height"] = 256,
    ["pixel_samples"] = 1,
}

Camera("/Scene/rendering/camera") {
    ["node_xform"] = Mat4(-0.143713, 0.000547514, -0.989619, 0,
                          -0.314372, 0.948176, 0.0461778, 0,
                          0.938358, 0.317745, -0.136093, 0,
                          436.52, 126.318, -68.5518, 1),
}

cloud = VdbGeometry("/Scene/surfacing/openVdbVolume") {
    ["model"] = rats_assets_dir.."/models/cloud_small.vdb",
}

GeometrySet("geometryset") {
    cloud,
}

cloudVol = VdbVolume("/Scene/surfacing/cloudVol") {
    ["opacity_gain_mult"]= Rgb(0.4, 0.6, 0.5),
    ["color_mult"]= Rgb(1.0, 1.0, 1.0),
    ["incandescence_gain_mult"] = Rgb(0.0, 0.0, 0.0),
    ["anisotropy"] = 0,
}

sphereLight1 = SphereLight("sphere_light1") {
    ["node_xform"] = translate(30, 0, 70),
    ["color"] = Rgb(1, 0, 0),
    ["intensity"] = 3000,
    ["radius"] = 2,
    ["normalized"] = false,
}

sphereLight2 = SphereLight("sphere_light2") {
    ["node_xform"] = translate(20, 0, -50),
    ["color"] = Rgb(0, 0.2, 1),
    ["intensity"] = 3000,
    ["radius"] = 2,
    ["normalized"] = false,
}

lightSet = LightSet("/Scene/lighting/lightSet") {
    sphereLight1,
    sphereLight2,
}

Layer("/Scene/rendering/organizer/perPartitionAssignments") {
    {cloud, "", lightSet, cloudVol},
}

