SceneVariables {
    ["image_width"]  = 256,
    ["image_height"] = 256,
    ["pixel_samples"] = 1,
}

Camera("/Scene/rendering/camera") {
    ["node_xform"] = Mat4(0.870462, 0.126832, 0.475615, 0,
                          0.306214, 0.616983, -0.724958, 0,
                          -0.385393, 0.776685, 0.49822, 0,
                          -6.12066, 10.5025, 5.90881, 1),
}

plane = UsdGeometry("/Scene/geometry/plane") {
    ["stage"] = rats_assets_dir.."/models/plane.usdc",
    ["prim_path"] = "/plane",
    ["node_xform"] = scale(40, 40, 40),
}

sphere = UsdGeometry("/Scene/geometry/sphere2") {
    ["stage"] = rats_assets_dir.."/models/sphere.usdc",
    ["prim_path"] = "/sphere",
    ["node_xform"] = translate(-4.7, 7.5, 4),
}

GeometrySet("geometryset") {
    plane,
    sphere,
}

planeMtl = DwaSolidDielectricMaterial("/Scene/surfacing/planeMtl") {
    ["albedo"] = Rgb(0.6, 0.6, 0.6),
}

baseVol1 = BaseVolume("/Scene/surfacing/baseVol1") {
    ["attenuation color"] = Rgb(0.01, 0.01, 0.01),
    ["match_diffuse"] = true,
    ["invert_attenuation_color"] = true,
    ["use_diffuse_ramp"] = true,
    ["diffuse_colors"] = {
                            Rgb(0.12,0.09,0.92), 
                            Rgb(0.86,0.40,0.49), 
                            Rgb(0.0,0.78,0.87), 
                            Rgb(0.0, 1.0, 0.0)
                          },
    ["diffuse_distances"] = {0.228, 0.406, 0.663, 0.936},
    ["diffuse_interpolations"] = {1, 2, 1, 2},
    ["diffuse_max_depth"] = 2.3,
}

key = SphereLight("/Scene/lighting/key") {
    ["node_xform"] =  translate(100, 100, 100),
    ["radius"] = 10,
    ["intensity"] = 200,
}

lightSet = LightSet("/Scene/lighting/lightSet") {
    key,
}

Layer("/Scene/rendering/organizer/perPartitionAssignments") {
    {plane, "", planeMtl, lightSet, undef(), undef()},
    {sphere, "", "", lightSet, undef(), baseVol1},
}

