SceneVariables
{
    ["image_width"] = 480,
    ["image_height"] = 270,
    ["pixel_samples"] = 2
}

PerspectiveCamera("/camera")
{
    ["node_xform"] = translate(0, 0, 6)
}

envLight = EnvLight("/envLight")
{
}

lightSet = LightSet("/lightSet")
{
    envLight
}

sphereVol = BaseVolume("/sphereVol")
{
    ["attenuation_intensity"] = .1
}

sphere = VdbGeometry("/sphere")
{
    ["model"] = rats_assets_dir.."/models/sphere.vdb",
}

instancer = RdlInstancerGeometry("/instancer")
{
    ["positions"] = { Vec3(-1, 0, 0), Vec3(1, 0, 0) },
    ["references"] = { sphere }
}

GeometrySet("/geomSet")
{ 
    instancer
}

Layer("/layer")
{
    { sphere, "", lightSet, sphereVol },
    { instancer, "", lightSet }
}

