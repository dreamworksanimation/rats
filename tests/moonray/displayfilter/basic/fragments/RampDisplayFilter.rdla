local ro = RenderOutput("/output/beauty") {}

--------------------------------------
-- RampDisplayFilter
--------------------------------------

local u_ramp = RampDisplayFilter("/display/u_ramp") {
    ["positions"] = {0.0, 0.15, 0.3, 0.5, 1.0},
    ["colors"] = {Rgb(0.0, 0.8, 0.8), Rgb(0.0, 1.0, 0.0), Rgb(0.2, 0.2, 0.0), Rgb(0.0, 0.0, 1.0), Rgb(0.2, 0.0, 1.0)},
    ["ramp_type"] = "u_ramp",
    ["interpolations"] = {4, 4, 4, 4, 4},
    ["input"] = ro
}

RenderOutput("/output/u_ramp") {
    ["file_name"] = "u_ramp.exr",
    ["result"] = "display filter",
    ["display_filter"] = u_ramp,
    ["channel_name"] = "u_ramp"
}

