local ro = RenderOutput("/output/beauty") {}

--------------------------------------
-- ClampDisplayFilter
--------------------------------------

local clamp = ClampDisplayFilter("/display/clamp") {
    ["input"] = ro,
    ["min"] = Rgb(0.4, 0.4, 0.4),
    ["max"] = Rgb(0.6, 0.6, 0.6),
}

RenderOutput("/output/clamp") {
    ["file_name"] = "clamp.exr",
    ["result"] = "display filter",
    ["display_filter"] = clamp,
    ["channel_name"] = "clamp"
}
