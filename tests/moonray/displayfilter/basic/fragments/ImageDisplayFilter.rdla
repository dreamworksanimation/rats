-- ImageDisplayFilter
--------------------------------------

local image_no_scale = ImageDisplayFilter("/display/image_no_scale") {
    ["input"] = ro,
    ["display_type"] = "no_scale",
    ["image_path"] = rats_assets_dir.."/images/grid.exr"
}

RenderOutput("/output/image_no_scale") {
    ["file_name"] = "image_no_scale.exr",
    ["result"] = "display filter",
    ["display_filter"] = image_no_scale,
    ["channel_name"] = "image_no_scale"
}

