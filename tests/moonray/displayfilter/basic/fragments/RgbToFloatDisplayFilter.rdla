-- RgbToFloatDisplayFilter
--------------------------------------

local r = RgbToFloatDisplayFilter("/display/r") {
    ["input"] = ro,
    ["mode"] = "r",
}

local g = RgbToFloatDisplayFilter("/display/g") {
    ["input"] = ro,
    ["mode"] = "g",
}

local b = RgbToFloatDisplayFilter("/display/b") {
    ["input"] = ro,
    ["mode"] = "b",
}

local rgb_min = RgbToFloatDisplayFilter("/display/rgb_min") {
    ["input"] = ro,
    ["mode"] = "min",
}

local rgb_max = RgbToFloatDisplayFilter("/display/rgb_max") {
    ["input"] = ro,
    ["mode"] = "max",
}

local average = RgbToFloatDisplayFilter("/display/average") {
    ["input"] = ro,
    ["mode"] = "average",
}

local sum = RgbToFloatDisplayFilter("/display/sum") {
    ["input"] = ro,
    ["mode"] = "sum",
}

local luminance = RgbToFloatDisplayFilter("/display/luminance") {
    ["input"] = ro,
    ["mode"] = "luminance",
}

RenderOutput("/output/r") {
    ["file_name"] = "r.exr",
