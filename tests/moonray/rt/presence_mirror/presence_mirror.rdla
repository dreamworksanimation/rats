sceneVars = SceneVariables {
    ["lights visible in camera"] = true,
    ["pixel samples"] = 2,
    ["max depth"] = 10,
    ["max diffuse depth"] = 10,
    ["max mirror depth"] = 10,
    ["light samples"] = 1,
    ["bsdf samples"] = 1,
    ["image width"] = 256,
    ["image height"] = 256,
    ["enable presence shadows"] = true,
}

shotCam = Camera("/Scene/rendering/shot_cam") {
    ["node xform"] = rotate(-90, 1, 0, 0) * translate(-50, 80, 49),
    ["focal"] = 35,
    ["film width aperture"] = 24,
}

RectLight("/Scene/lighting/rect") {
    ["node xform"] = rotate(-90, 1, 0, 0) * scale(32.8, 32.8, 32.8) * translate(-50,99.2,45),
    ["color"] = Rgb(1, 1, 1),
    ["intensity"] = 0.01,
    ["exposure"] = 5.6,
    ["normalized"] = false,
    ["width"] = 0.8,
    ["height"] = 0.8,
    ["presence shadows"] = 1
}

lightSet = LightSet("LightSetA") {
    RectLight("/Scene/lighting/rect"),
}

-- Geometry --

geoms = {}

local planeBottom = UsdGeometry("/Scene/geometry/bottom") {
    ["node_xform"] = scale(100, 100, 100) * translate(-50, 0, 50),
    ["stage"] = rats_assets_dir.."/models/plane.usdc",
    ["prim_path"] = "/plane",
}
table.insert(geoms, planeBottom)

local planeMiddle = UsdGeometry("/Scene/geometry/middle") {
    ["node_xform"] = scale(100, 100, 100) * translate(-50, 70, 50),
    ["stage"] = rats_assets_dir.."/models/plane.usdc",
    ["prim_path"] = "/plane",
}
table.insert(geoms, planeMiddle)

GeometrySet("Scene/geometrySet")(geoms)

-- Materials --

local mirrorMtl = DwaMetalMaterial("/Scene/surfacing/material/mirror") {
    ["roughness"] = 0.0,
}

local presenceMtl = DwaSolidDielectricMaterial("/Scene/surfacing/material/presence") {
    ["albedo"] = Rgb(0.8, 0.8, 0.8),
    ["presence"] = 0.5,
}

-- Layer --

Layer("Scene/layer") {
	{planeBottom, "", mirrorMtl, lightSet},
	{planeMiddle, "", presenceMtl, lightSet}
}

