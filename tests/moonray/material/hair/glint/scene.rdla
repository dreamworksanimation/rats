SceneVariables {
    ["image_width"] = 256,
    ["image_height"] = 256,
    ["pixel_samples"] = 4,
}

Camera("camera") {
    ["node_xform"] = translate(0.0, 0.0, 22.0) * rotate(-23, 1, 0, 0) * rotate(-25, 0, 1, 0) * translate(1.0, 1, 0),
}

env = EnvLight("env") {
    ["intensity"] = 0.2,
}

distant = DistantLight("distant") {
    ["node_xform"] = rotate(-60, 1, 0, 0),
}

lightSet = LightSet("lightSet") {
    env,
    distant,
}

hairGeom = UsdGeometry("hairGeom") {
    ["stage"] = rats_assets_dir.."/models/curves.usdc",
    ["prim_path"] = "/curve_0",
}

GeometrySet("geoms") {
    hairGeom
}

hairMtl = HairMaterial_v3("hairMtl") {
    ["primary_specular_roughness"] = 0.5,
    ["hair_color"] = Rgb(0.39, 0.3, 0.11),
    ["show_hair_glint"] = true,
    ["glint_roughness"] = 0.3,
    ["glint_eccentricity"] = 0.95,
    ["glint_saturation"] = 0.5,
    ["glint_min_twists"] = 1.5,
    ["glint_max_twists"] = 2.5,
}

layer = Layer("all") {
    {hairGeom, "", hairMtl, lightSet},
}
