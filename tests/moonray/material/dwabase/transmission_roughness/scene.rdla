rats_assets_dir = os.getenv("RATS_ASSETS_DIR")

casts_caustics = true;

SceneVariables {
    ["pixel_samples"] = 2, --8,
    ["light_samples"] = 1,
    ["bssrdf_samples"] = 0,
    ["max_depth"] = 5, --10,
    ["max_diffuse_depth"] = 10,
    ["max_glossy_depth"] = 10,
    ["max_mirror_depth"] = 10,
    ["image_width"] = 580,
    ["image_height"] = 320,
    ["sample_clamping_value"] = 10,
    ["sample_clamping_depth"] = 1,
}

Camera("/Scene/rendering/camera") {
    ["node_xform"] = translate(0, 0.0, 140)
                   * rotate(-23, 1, 0, 0)
                   * translate(0.0, 22, 0.0),
}

-------------------------------------------------------

env = EnvLight("/Scene/lighting/env") {
    ["node_xform"] = rotate(160, 0, 1, 0),
    ["exposure"] = 0.0,
    ["texture"] = rats_assets_dir .. "/hdri/parkinglot_dusk.exr",
    ["visible_in_camera"] = 1,
}

lightSet = LightSet("/Scene/lighting/lightSet") {
    env,
}

-------------------------------------------------------

checkerMap = CheckerboardMap("/checkerMap") {
    ["num_u_tiles"] = 16,
    ["num_v_tiles"] = 8,
}

local remapRgh1 = RemapMap("/Scene/surfacing/remapRgh1") {
    ["input"] = bind(checkerMap),
    ["input_min"] = 0,
    ["input_max"] = 1,
    ["output_min"] = 0.1,
    ["output_max"] = 0.4,
}

local remapRgh2 = RemapMap("/Scene/surfacing/remapRgh2") {
    ["input"] = bind(checkerMap),
    ["input_min"] = 0,
    ["input_max"] = 1,
    ["output_min"] = 0.01,
    ["output_max"] = 0.3,
}

local remapTrm = RemapMap("/Scene/surfacing/remapTrm") {
    ["input"] = bind(checkerMap),
    ["input_min"] = 0,
    ["input_max"] = 1,
    ["output_min"] = 0.9,
    ["output_max"] = 1.8,
    ["clamp"] = false,
}

local sphereGeom = UsdGeometry("/Scene/geometry/geomSphere2") {
    ["node_xform"] = scale(18, 18, 18) * rotate(80, 0, 1, 0)
                   * translate(-28, 18, 0),
    ["stage"] = rats_assets_dir .. "/models/sphere.usdc",
    ["prim_path"] = "/sphere",
}

local sphereMtl = DwaRefractiveMaterial("/Scene/surfacing/mtlSphere2") {
    ["roughness"] = bind(remapRgh1, 1.0),
    ["casts_caustics"] = casts_caustics;
}

-------------------------------------------------------

local widgetGeom = UsdGeometry("/Scene/geometry/geomWidget") {
    ["node_xform"] = scale(6, 6, 6) * rotate(35, 0, 1, 0) * translate(20, 0, -20),
    ["stage"] = rats_assets_dir .. "/models/MoonRayWidget.usdc",
    ["prim_path"] = "/widget"
}

local widgetMtl = DwaRefractiveMaterial("/Scene/surfacing/mtlWidget") {
    ["roughness"] = bind(remapRgh2, 1.0),
    ["casts_caustics"] = casts_caustics;
}

-------------------------------------------------------

local planeGeom = UsdGeometry("/Scene/geometry/planeGeom") {
    ["node_xform"] = scale(1000, 1, 1000),
    ["stage"] = rats_assets_dir .. "/models/plane.usdc",
    ["prim_path"] = "/plane"
}

local planeMap = ImageMap("/Scene/surfacing/planeMap") {
    ["texture"] = rats_assets_dir .. "/textures/color_grid.tx",
    ["scale"] = Vec2(12, 12),
    ["offset"] = Vec2(0, .25),
    ["wrap_around"] = true,
    ["saturation_enabled"] = true,
    ["saturation"] = Rgb(2, 2, 2)
}

local planeMtl = DwaBaseMaterial("/Scene/surfacing/planeMtl") {
    ["albedo"] = bind(planeMap),
    ["show_specular"] = false,
}

-------------------------------------------------------

GeometrySet("Scene/geometrySet") {
    widgetGeom,
    sphereGeom,
    planeGeom
}

Layer("/Scene/layer") {
    {widgetGeom, "", widgetMtl, lightSet},
    {sphereGeom, "", sphereMtl, lightSet},
    {planeGeom, "", planeMtl, lightSet}
}
