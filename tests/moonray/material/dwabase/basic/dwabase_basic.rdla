SceneVariables {
    ["image_width"] = 256,
    ["image_height"] = 256,
    ["max_depth"] = 2,
}

Camera("/Scene/rendering/camera") {
    ["node_xform"] = translate(0, 0, 4.5) *
                     rotate(-35, 1, 0, 0) *
                     translate(0, 1.0, 0),
    ["focal"] = 35,
}

geoms = {}
assignments = {}

-------------------------------------------------------

env = EnvLight("/Scene/lighting/env") {
    ["intensity"] = 0.8,
    ["texture"] = rats_assets_dir .. "/hdri/parkinglot_dusk.exr",
}

key = RectLight("/Scene/lighting/key") {
    ["node_xform"] = translate(0, 0, 100) *
                     rotate(-60, 1, 0, 0) *
                     rotate(-60, 0, 1, 0),
    ["intensity"] = 12,
    ["color"] = Rgb(0.855, 0.77, 0.535),
    ["width"] = 50,
    ["height"] = 50,
}

lightSet = LightSet("/Scene/lighting/lightSet") {
    env,
    key,
}

-------------------------------------------------------

local plane_width = 40
local plane_depth = 40
local checker_size = 4.0
local planeGeom = UsdGeometry("/Scene/geometry/planeGeom") {
    ["node_xform"] = scale(0.5 * plane_width, 1, 0.5 * plane_depth),
    ["stage"] = rats_assets_dir .. "/models/plane.usdc",
    ["prim_path"] = "/plane",
}
table.insert(geoms, planeGeom)

local planeMap = ImageMap("/Scene/surfacing/planeMap") {
    ["texture"] = rats_assets_dir .. "/textures/color_grid.tx",
    ["scale"] = Vec2(plane_width / checker_size, plane_depth / checker_size),
    ["offset"] = Vec2(-0.5 * plane_width / checker_size,
                      -0.5 * plane_depth / checker_size),
    ["wrap_around"] = true,
}

local planeMtl = DwaBaseMaterial("/Scene/surfacing/planeMtl") {
    ["albedo"] = bind(planeMap),
    ["show_specular"] = false,
}
table.insert(assignments, {planeGeom, "", planeMtl, lightSet})


-------------------------------------------------------

local geom = UsdGeometry("/Scene/geometry/geom") {
    ["node_xform"] = translate(0, 1, 0),
    ["stage"] = rats_assets_dir .. "/models/sphere.usdc",
    ["prim_path"] = "/sphere"
}
table.insert(geoms, geom)

local mtl = DwaBaseMaterial("/Scene/surfacing/mtl") {
    ["albedo"] = Rgb(0.319, 0.06, 0.0),
    ["clearcoat"] = 0.3,
    ["show_clearcoat"] = false, -- off for now, fix clearcoat!!
    ["metallic"] = 0.1,
    ["metallic color"] = Rgb(0.5, 0.4, 0.3),
    ["metallic edge color"] = Rgb(0.5, 0.4, 0.3),
    ["roughness"] = 0.1,
    ["specular_model"] = 0,
    ["transmission"] = 0.5,
    ["show_transmission"] = true,
    ["iridescence"] = 0.3,
    ["show_emission"] = true,
    ["emission"] = Rgb(0.05, 0.0, 0.0),
    ["scattering radius"] = 0.5,
    ["scattering color"] = Rgb(1.0, 0.02, 0.02)
}
table.insert(assignments, {geom, "", mtl, lightSet})


-------------------------------------------------------

GeometrySet("Scene/geometrySet")(geoms)
Layer("/Scene/layer")(assignments)

