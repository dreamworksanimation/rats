SceneVariables {
    ["image_width"] = 250,
    ["image_height"] = 250,
    ["lights_visible_in_camera"] = true,
}

Camera("/Scene/rendering/camera") {
    ["node_xform"] = translate(0, 0, 6) * rotate(-20, 1, 0, 0),
    ["focal"] = 50,
}

-------------------------------------------------------

local furnace = EnvLight("/Scene/lighting/furnace") {
    ["intensity"] = 0.217,
}

lightSet = LightSet("/Scene/lighting/lightSet") {
    furnace
}

-------------------------------------------------------

local geom1 = SphereGeometry("sphere") {}

local baseClearcoat = DwaSolidDielectricMaterial("baseClearcoat") {
    ["clearcoat_refractive_index"] = 1.6,
    ["refractive_index"] = 1.2,
    ["show_clearcoat"] = true,
    ["clearcoat"] = 1,
    ["clearcoat_roughness"] = 0,
    ["roughness"] = 0.2,
    ["show_specular"] = false
}

-------------------------------------------------------

GeometrySet("Scene/geometrySet") { geom1 }
Layer("/Scene/layer") { {geom1, "", baseClearcoat, lightSet} }
