rats_assets_dir = os.getenv("RATS_ASSETS_DIR")

SceneVariables {
    ["pixel_samples"] = 8,
    ["image_width"] = 256,
    ["image_height"] = 256,
}

shotCam = Camera("/Scene/rendering/camera") {
    ["node_xform"] = translate(0, 0, 5),
}

key = RectLight("/Scene/lighting/key") {
    ["node_xform"] = rotate(-45, 1, 0, 0) * rotate(-45, 0, 1, 0) * translate(7, 7, -5),
    ["exposure"] = -3,
    ["width"] = 5,
    ["height"] = 5,
}

lightSet = LightSet("lightSet") { key, }

geom = UsdGeometry("geom") {
    ["stage"] = rats_assets_dir .. "/models/MoonRayWidget.usdc",
    ["prim_path"] = "/widget",
    ["node_xform"] = rotate(45, 1, 0, 0) * translate(0, -2, -13),
}

GeometrySet("geometrySet") {
    geom,
}

projGeom = BoxGeometry("projGeom") {
    ["node_xform"] = rotate(0, 1, 0, 0),
}

projNormalMap = ProjectPlanarNormalMap("/Scene/surfacing/projMap") {
   ["projector"] = projGeom,
   ["use_reference_space"] = false,
   ["texture"] = rats_assets_dir .. "/textures/chesterfield.tx",
}

mtl = DwaSolidDielectricMaterial("mtl") {
    ["input_normal"] = projNormalMap
}

Layer("layer") {
    { geom, "", mtl, lightSet },
}
