SceneVariables {
    ["pixel_samples"] = 2,
    ["max_depth"] = 3,
    ["image_width"] = 500,
    ["image_height"] = 250,
}

Camera("/Scene/rendering/camera") {
    ["node_xform"] = translate(0, 1.0, 12) * rotate(-10, 1, 0, 0),
    ["focal"] = 50,
}

-------------------------------------------------------

env = EnvLight("/Scene/lighting/env") {
    ["intensity"] = 0.8,
    ["texture"] = rats_assets_dir.."/hdri/parkinglot_dusk.exr",
}

key = RectLight("/Scene/lighting/key") {
    ["node_xform"] = translate(0, 0, 100) *
                     rotate(-60, 1, 0, 0) *
                     rotate(-60, 0, 1, 0),
    ["intensity"] = 12,
    ["color"] = Rgb(0.855, 0.77, 0.535),
    ["width"] = 50,
    ["height"] = 50,
}

lightSet = LightSet("/Scene/lighting/lightSet") {
    env,
    key,
}

-------------------------------------------------------

planeGeom = UsdGeometry("/Scene/geometry/planeGeom") {
    ["node_xform"] = scale(18, 1, 10),
    ["stage"] = rats_assets_dir.."/models/plane.usdc",
    ["prim_path"] = "/plane",
}

sphereLeftGeom = UsdGeometry("/Scene/geometry/sphereLeftGeom") {
    ["node_xform"] = rotate(180, 0, 1, 0) * translate(-1.3, 1.0, 0),
    ["stage"] = rats_assets_dir.."/models/sphere.usdc",
    ["prim_path"] = "/sphere"
}

sphereRightGeom = UsdGeometry("/Scene/geometry/sphereRightGeom") {
    ["node_xform"] = rotate(180, 0, 1, 0) * translate(1.3, 1.0, 0),
    ["stage"] = rats_assets_dir.."/models/sphere.usdc",
    ["prim_path"] = "/sphere"
}

GeometrySet("Scene/geometrySet") {
    planeGeom,
    sphereLeftGeom,
    sphereRightGeom
}

--------------------------------------------------------

normalMap = ImageNormalMap("/Scene/surfacing/normalMap") {
    ["tangent_space_normal_texture"] = rats_assets_dir.."/textures/chesterfield.tx",
    ["scale"] = Vec2(3, 3),
}

sphereLeftMtl = DwaBaseMaterial("/Scene/surfacing/sphereLeftMtl") {
    ["albedo"] = Rgb(0.319, 0.06, 0.0),
    ["roughness"] = 0.35,
    ["input_normal"] = normalMap,
}

sphereRightMtl = DwaBaseMaterial("/Scene/surfacing/sphereRightMtl") {
    ["albedo"] = Rgb(0.319, 0.06, 0.0),
    ["roughness"] = 0.5,
    ["input_normal"] = normalMap,
    ["input_normal_dial"] = 2,
}

planeMap = ImageMap("/Scene/surfacing/planeMap") {
    ["texture"] = rats_assets_dir.."/textures/color_grid.tx",
    ["scale"] = Vec2(7, 4),
    ["offset"] = Vec2(0, .25),
}

planeMtl = DwaBaseMaterial("/Scene/surfacing/planeMtl") {
    ["albedo"] = bind(planeMap),
    ["show_specular"] = false,
}

-------------------------------------------------------

Layer("/Scene/layer") {
    {planeGeom, "", planeMtl, lightSet},
    {sphereLeftGeom, "", sphereLeftMtl, lightSet},
    {sphereRightGeom, "", sphereRightMtl, lightSet}
}
