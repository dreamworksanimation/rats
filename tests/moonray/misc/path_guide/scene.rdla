rats_assets_dir = os.getenv("RATS_ASSETS_DIR")

md = 6
SceneVariables {
    ["image_width"] = 128,
    ["image_height"] = 128,
    ["max_depth"] = md,
    ["max_diffuse_depth"] = md,
    ["max_glossy_depth"] = md,
    ["max_mirror_depth"] = md,

    ["bsdf_samples"] = 1,
    ["light_samples"] = 1,

    ["sampling_mode"] = 2,
    ["min_adaptive_samples"] = 64,
    ["max_adaptive_samples"] = 4096,
    ["target_adaptive_error"] = 1,

    ["path_guide_enable"] = true,
}

Camera("/Scene/rendering/camera") {
    ["node_xform"] = translate(0, 0, 26) *
                     rotate(-26, 1, 0, 0) * rotate(50, 0, 1, 0) *
                     translate(-0.4, 2, 0),
    ["focal"] = 35,
    ["film_width_aperture"] = 24,
}

key = SphereLight("/Scene/lighting/key") {
    ["node_xform"] = translate(-15, 30, -25),
    ["color"] = Rgb(0.855, 0.77, 0.535),
    ["exposure"] = 4,
}

lightSet = LightSet("/Scene/lighting/lightSet") {
    key,
}

planeGeom = RdlMeshGeometry("/Scene/geometry/planeGeom") {
    ["node_xform"] = scale(1000, 1, 1000),
    ["vertex_list"] = {Vec3(-0.5, 0.0, 0.5), Vec3(0.5, 0.0, 0.5), Vec3(0.5, 0.0, -0.5), Vec3(-0.5, 0.0, -0.5)},
    ["vertices_by_index"] = {0, 1, 2, 3},
    ["face_vertex_count"] = {4},
    ["is_subd"] = false
}

boxGeom = BoxGeometry("/Scene/geometry/box") {
    ["node_xform"] = scale(8, 8, 8) * translate(0, 4, 0),
}

torusGeom = UsdGeometry("/Scene/geometry/torus") {
    ["node_xform"] = scale(3, 3, 3) * rotate(90, 0, 0, 1) * translate(0, 4, 0),
    ["stage"] = rats_assets_dir.."/models/torus.usdc",
    ["prim_path"] = "/torus",
}

GeometrySet("geometrySet") {
    planeGeom,
    boxGeom,
    torusGeom,
}

planeMtl = DwaSolidDielectricMaterial("/Scene/surfacing/planeMtl") {
    ["albedo"] = Rgb(0.5, 0.5, 0.5),
    ["roughness"] = 0.03,
}

boxMtl = DwaRefractiveMaterial("Scene/surfacing/boxMtl") {
    ["casts_caustics"] = true,
    ["roughness"] = 0,
}

torusMtl = DwaSolidDielectricMaterial("Scene/surfacing/torusMtl") {
    ["albedo"] = Rgb(0.8, 0.8, 0.4),
}

Layer("layer") {
    { torusGeom, "", torusMtl, lightSet },
    { boxGeom, "", boxMtl, lightSet },
    { planeGeom, "", planeMtl, lightSet },
}
